<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context="com.piramidsoft.salon.Fragment.FragmentTransfer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_tgl">

            <EditText
                android:id="@+id/ed_nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transfer"
                android:text="Phone (0821XXXXXXXX)"
                android:textColor="@color/hitamFont" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ammount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomor"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_tgl">

            <EditText
                android:id="@+id/ed_ammount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transfer Ammount"
                android:text="1.000.500.00"
                android:textColor="@color/hitamFont" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ammount"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_tgl">

            <EditText
                android:id="@+id/ed_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter note (Optional)"
                android:text="Bla bla bla"
                android:textColor="@color/hitamFont" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ripple_effect_booking"
        android:text="@string/confirmation"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</RelativeLayout>
