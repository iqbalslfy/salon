<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/txtWaktu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="12 April 10.45 WIB"
        android:textSize="@dimen/size_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/txtKeterangan"
        android:layout_toRightOf="@+id/txtWaktu"
        android:text="Muhammad Iqbal"
        android:textAllCaps="true"
        android:textSize="@dimen/size_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtKeterangan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtJumlah"
        android:layout_marginEnd="5dp"
        android:text="Detail"
        android:textSize="@dimen/size_small"
        android:textStyle="bold" />
</RelativeLayout>